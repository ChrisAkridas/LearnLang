generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lesson {
  id           String       @id @default(uuid())
  title        String
  lessonNumber Int          @unique @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @default(now())
  vocabulary   Vocabulary[]
  fillBlanks   FillBlanks[]
}

model Vocabulary {
  id        String @id @default(uuid())
  english   String
  greek     String
  greeklish String
  lesson    Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId  String
}

model FillBlanks {
  id       String   @id @default(uuid())
  english  String
  greek    String
  pool     String[]
  correct  String
  lesson   Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId String
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String
  email     String  @unique
  country   String?
  bio       String?
  age       Int?
}
